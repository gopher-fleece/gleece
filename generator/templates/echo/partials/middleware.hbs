// Middlewares {{middlewares}} section
for _, middleware := range {{middlewares}} {
	{{#if isErrorMiddleware}}
		middlewareCtx, continueOperation := middleware(getRequestContext(echoCtx), echoCtx, {{errorName}})
		setRequestContext(echoCtx, middlewareCtx)
		if !continueOperation {
			return nil
		}
	{{else}}
		middlewareCtx, continueOperation := middleware(getRequestContext(echoCtx), echoCtx)
		setRequestContext(echoCtx, middlewareCtx)
		if !continueOperation {
			return nil
		}
	{{/if}}
}
// End middlewares {{middlewares}} section
